<{include file="../public/header.html" }>
<div class="page-container"> 
  
  <!-- Page content -->
  <div class="page-content"> 
      <{include file="../public/left.html" }>
    <div class="content-wrapper"> 
      <!-- Content area -->
      <div class="content">
        <div class="row">
          <div class="col-md-8 col-md-offset-2 form-horizontal"> 
            <!-- <form class="form-horizontal"> -->
              <{form_open('goods/verify')}>
              <div class="panel panel-flat">
                <div class="panel-heading pv10 mb20 br-b">
                  <h5 class="panel-title"><{$title}></h5>
                  </div>
                <div class="panel-body">
                  <input name="id" value="<{$detail.id}>"  style="display:none" >
                  <input name="page" value="<{$page}>"  style="display:none" >
                  <input name="categoryId" value="<{$categoryId}>"  style="display:none" >
                  <input name="sales_type" value="<{$sales_type}>"  style="display:none" >
                  <input name="orderBy" value="<{$orderBy}>"  style="display:none" >
                  <input name="name" value="<{$name}>"  style="display:none" >
                  <div class=" form-group">
                    <label class="col-sm-2 control-label">商品名称:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{$detail.name}>">
                    </div>
                  </div>
                  <div class=" form-group">
                    <label class="col-sm-2 control-label">商品图片:</label>
                    <div class="col-sm-10">
                    <img src="<{$data.common.upload_images}><{$detail.img}>" style="width:60px;height:60px;">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">销售方式:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{($detail.sales_type == '1')?'普通':'团购'}>">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">商品分类:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control"  readonly="readonly" placeholder="" value="<{$categoryList[$detail.category]}>">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">商品介绍:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{$detail.info}>">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">是否产地直销:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{($detail.direct_sales == '1')?'是':'否'}>">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">物流方式:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{($detail.logistics == '1')?'第三方快递':'卖家送货上门'}>">
                    </div>
                  </div>
                  <{if $detail.logistics == '1'}>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">运费:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{$detail.ship_cost}>">
                    </div>
                  </div>
                  <{else}>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">配送范围:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{($detail.ship_cost=='0')?'1公里内':(($detail.ship_cost=='1')?'2公里内':(($detail.ship_cost=='2')?'3公里内':'不限'))}>">
                    </div>
                  </div>
                  <{/if}>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">状态:</label>
                    <{if $type == 2}>
                    <div class="col-sm-10">
                    <input type="text" class="form-control"  readonly="readonly"  placeholder="" value="<{$goodsStatus[$detail.state]}>">
                    </div>
                    <{else}>
                    <div class=" col-sm-4 ">
                      <select name="state" class="form-control">
                        <option value="1"<{if $detail.state eq 1}> selected="selected"<{/if}>>待审核</option>
                        <option value="5"<{if $detail.state eq 5}> selected="selected"<{/if}>>通过</option>
                        <option value="3"<{if $detail.state eq 3}> selected="selected"<{/if}>>不通过</option>
                      </select>
                    </div>
                    <{/if}>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">申请时间:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{date('Y-m-d H:i:s',$detail.add_time)}>">
                    </div>
                  </div>
                  <{if $type == 2}>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">审核人:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{$detail.username}>">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">申请时间:</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" readonly="readonly" placeholder="" value="<{date('Y-m-d H:i:s',$detail.verify_time)}>">
                    </div>
                  </div>
                  <{/if}>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">审核备注:</label>
                    <div class="col-sm-10">
                    <input type="text" name="verify_remark" <{if $type == '2'}> readonly="readonly" <{/if}> class="form-control"  placeholder="可填写审核备注" value="<{$detail.verify_remark}>">
                    </div>
                  </div>
                  <div class="text-right" style="text-align: center !important">
                    <{if $type == 1 }>
                    <button class="btn btn-primary" type="submit" style="color: white;">提交</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <{/if}>
                    <p class="btn btn-primary"><a href='<{site_url("goods/index?per_page=<{$page}>&categoryId=<{$categoryId}>&sales_type=<{$sales_type}>&orderBy=<{$orderBy}>&name=<{$name}>")}>' style="color: white;">返回</a></p>
                  </div>
                </div>
              </div>
            </form>
            <!-- /basic layout --> 
            
          </div>
        </div>
        <{include file="../public/footer_page.html" }>
      </div>
      <!-- /content area --> 
      
    </div>
    <!-- /main content --> 
    
  </div>
  <!-- /page content --> 
  
</div>
<{include file="../public/footer.html" }>
