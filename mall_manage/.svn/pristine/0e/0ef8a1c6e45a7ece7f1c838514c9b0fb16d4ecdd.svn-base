<?php
defined('BASEPATH') OR exit('No direct script access allowed');


/**
 * @Description: 首页
 */
class Home extends MY_Controller
{

    public function __construct()
    {
        parent::__construct();
    }

    public function index()
    {
        $list= $this->model->getData();
        $this->assign('list',$list);
        $this->assign('data', $this->data);
		$this->display($this->data['file_path']);

    }
    //获取卖家统计数据
    public function showLine()
    {
        $this->response['echarts_data'] = $this->model->getData2();


        $this->returnResponse();
    }

    //获取买家统计数据
    public function showLine2()
    {
        $this->response['echarts_data'] = $this->model->getData3();


        $this->returnResponse();
    }

    //获取商品统计数据
    public function showLine3()
    {
        $this->response['echarts_data'] = $this->model->getData4();


        $this->returnResponse();
    }

    public function showLine4()
    {
        $this->response['echarts_data'] = $this->model->showLine();


        $this->returnResponse();
    }

    public function showTips()
    {
        $this->response = $this->model->showTips();


        $this->returnResponse();
    }

}