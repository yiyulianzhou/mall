<{include file="../public/header.html" }>
<!-- /main navbar --> 
<!-- Page container -->
<div class="page-container"> 
  
  <!-- Page content -->
  <div class="page-content"> 
      <{include file="../public/left.html" }>
    <div class="content-wrapper">
      <!-- Content area -->
      <div class="content">
        <div class="panel panel-flat">
          <div class="panel-heading">
            <h5 class="panel-title">订单管理<span class="ml10">
              <input name="" type="button"  value="<{$searchbtn}>"  class="btn btn-xs bg-grey-100 text-xg flitbtn" id="searchbtn" onclick="btn()" >
              </span></h5>
            <!--<div class="heading-elements"><a href="#adduser" class="btn btn-primary" data-toggle="modal" data-target="#adduser"><i class="icon-plus-circle2"></i> 新增用户</a></div>-->
            <div class="heading-elements"></div>
          </div>
          <form action="" method="GET" class="form-container">
            <div class="panel-body br-t pt20" id="searchbox" style="<{$searchbox}>">
              <div class="row">
                <div class="col-md-2 col-sm-6 m-ss">
                  <select name="status" class="form-control">
                    <option value="-1"<{if $status eq -1}> selected="selected"<{/if}>>订单状态</option>
                    <{foreach from=$orderStatus item=statusList key=key}>
                      <option value="<{$key}>"<{if $status eq $key}> selected="selected"<{/if}>><{$statusList}></option>
                    <{/foreach}>
                  </select>
                </div>
                <div class="col-md-1 m-ss">
                  <input type="submit" class=" btn btn-block bg-grey-300" value="筛选">
                </div>
              </div>
            </div>
          </form>
          <table class="table datatable-basic table-hover">
            <thead class="bg-grey-100">
              <tr>
                <th>订单编号</th>
                <th>买家姓名</th>
                <th>商品名称</th>
                <th>商品规格</th>
                <th>购买数量</th>
                <th>订单总价</th>
                <th>下单时间</th>
                <th>发货时间</th>
                <th>订单状态</th>
                <{if isset($permission_tree.detail) || isset($permission_tree.delete)}>
                <th class="text-center">操作</th>
                <{/if}>
              </tr>
            </thead>
            <tbody><!-- danger -->
              <{foreach from=$orderList item=v}>
              <tr>
                <td><{$v.order_id}></td>
                <td><{$v.username}></td>
                <td><{$v.goodsName}></td>
                <td><{$v.name}></td>
                <td><{$v.amount}></td>
                <td><{$v.money}></td>
                <td><{date('Y-m-d H:i:s',$v.create_time)}></td>
                <td><{(empty($v.send_time)) ? '' : date('Y-m-d H:i:s',$v.send_time)}></td>
                <td><{$orderStatus[$v.status]}></td>
                <{if isset($permission_tree.detail) || isset($permission_tree.delete)}>
                <td class="text-center">
                  <ul class="icons-list">
                    <li class="dropdown"> <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-menu9"></i> </a>
                      <ul class="dropdown-menu dropdown-menu-right mnw100">
                        <{if isset($permission_tree.detail)}>
                        <li><a href='<{site_url("order/detail?id=<{$v.id}>")}>&per_page=<{$page}>&status=<{$status}>' ><i class="icon-compose"></i> 订单详情</a> 
                        </li>
                        <{/if}>
                        <{if isset($permission_tree.delete)}>
                        <li>
                          <a href='<{site_url("order/delete?id=<{$v.id}>")}>&per_page=<{$page}>'><i class="icon-inbox"></i> 订单删除</a>
                        </li>
                        <{/if}>
                      </ul>
                    </li>
                  </ul>
                </td>
                <{/if}>
              </tr>
              <{/foreach}>
            </tbody>
          </table>
          <{include file="../public/pager.html"}>
        </div>
        
        <{include file="../public/footer_page.html" }>
        
      </div>
      <!-- /content area --> 
      
    </div>
    <!-- /main content --> 
    
  </div>
  <!-- /page content --> 
  
</div>
</div>
<!-- /page container --> 
<!-- /page JS files -->
<script type="text/javascript" src="<{$base_url}>assets/js/pages/modals_option.js"></script>
<script type="text/javascript" src="<{$base_url}>assets/js/plugins/forms/styling/uniform.min.js"></script>
<script type="text/javascript" src="<{$base_url}>assets/js/plugins/forms/styling/switch.min.js"></script>

<script type="text/javascript">
  var btn1=document.getElementById('searchbtn');
  var box1=document.getElementById('searchbox');
  function btn(){ 
    if(btn1.value=="筛选 －"){
      box1.style.display='none';
      btn1.value="筛选 ＋";
    }else{
      box1.style.display='';
      btn1.value="筛选 －";
    }
  }
</script>
<{include file="../public/footer.html" }>
